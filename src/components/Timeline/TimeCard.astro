---
export interface Props {
  title: string;
  subTitle: string;
  firstChild: boolean;
  href?: string
}
const { title, subTitle, firstChild, href } = Astro.props;
---

<a class="flex h-20" href={href ? href : '#'}>
  <div
    class={`w-[2px] bg-zinc-200/10 flex justify-center ${
      firstChild ? "items-start h-1/2 mb-0 mt-auto" : "items-center h-full"
    }`}
  >
    <div class="w-2 h-2 rounded-full bg-yellow-500"></div>
  </div>
  <div class="my-auto">
    <div class="ml-6 text-yellow-500">{title}</div>
    <div class="ml-6 text-zinc-400">{subTitle}</div>
  </div>
</a>

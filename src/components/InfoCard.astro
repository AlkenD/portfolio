---
export interface Props {
    title: string;
    href: string;
}
const { title, href } = Astro.props;
---

<div class="space-y-4">
    <h2 class="text-xl" id={`#${href}`}># {title}</h2>
    <div class="grid grid-cols-1 gap-4">
        <div class="text-zinc-400">
            <slot />
        </div>
    </div>
</div>
